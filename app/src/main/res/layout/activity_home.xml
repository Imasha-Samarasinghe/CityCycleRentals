<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2f2f2f">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="188dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/welcome_background" />

        <TextView
            android:id="@+id/textGreeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:text="Hi, Username!"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textGreeting"
            android:layout_marginStart="20dp"
            android:text="Let's find your ride"
            android:textColor="#FFCB74"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/logo" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Your City"
        android:textSize="18sp"
        android:textColor="#F6F6F6"
        android:padding="16dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/city1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/city1"
                android:scaleType="centerCrop"
                android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/city1_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Colombo"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:background="#80000000"
                    android:padding="10dp"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/city2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/city2"
                android:scaleType="centerCrop"
                android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/city2_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kandy"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:background="#80000000"
                    android:padding="10dp"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/city3"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/city3"
                android:scaleType="centerCrop"
                android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/city3_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Galle"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:background="#80000000"
                    android:padding="10dp"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/city4"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/city4"
                android:scaleType="centerCrop"
                android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/city4_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ella"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:background="#80000000"
                    android:padding="10dp"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/city5"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/city5"
                android:scaleType="centerCrop"
                android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/city5_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sigiriya"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:background="#80000000"
                    android:padding="10dp"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/city6"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/city6"
                android:scaleType="centerCrop"
                android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/city6_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NuwaraEliya"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:background="#80000000"
                    android:padding="10dp"
                    android:layout_gravity="center"/>
            </FrameLayout>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2F2F2F"
        app:itemIconTint="@color/nav_icon_color"
        app:itemTextColor="@color/nav_text_color"
        app:menu="@menu/bottom_nav_menu"/>

</LinearLayout>
